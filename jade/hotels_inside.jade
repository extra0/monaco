						.m-t-30
							.row
								- for (i=1;i<=3;i++) {
									.col-sm-4.m-b-10.text-center.col-xs-4.col-xxs-12
										a(href="img/service-#{4-i}.jpg" fancybox rel="gallery")
											img(src="img/service-#{4-i}.jpg", alt="img")
								-}
				p.page-subtitle Люкс номер
				block repeat
			// конец часть контента
			// сайдбар
			.col-lg-3.col-sm-4.m-b-30
				h3.page-subtitle.sm-text-center Номера
				// список номеров
				.p-b-20
					.row
						- for (i=1;i<=3;i++) {
							.col-sm-12.col-xs-6.col-xxs-12
								.item__block-room
									img.item__block-img(src="img/content/room.jpg", alt="hotel")
									.item__block-description
										p.item__block-description-price.btn €#{i*399}
										p.item__block-description-type Полулюкс
						-}
				// конец список номеров
				h3.page-subtitle.sm-text-center Удобства
				.border-panel.item__service-wrap
					.item__service
						img.item__service-img(src="img/parking.png", alt="")
						p.item__service-text Парковка
					.item__service
						img.item__service-img(src="img/wifi.png", alt="")
						p.item__service-text Wi-Fi
					.item__service
						img.item__service-img(src="img/swim.png", alt="")
						p.item__service-text Бассейн
					.item__service
						img.item__service-img(src="img/beach.png", alt="")
						p.item__service-text Вид на пляж
			// конец сайдбар
		// другие отели
		.row
			.col-sm-6.col-xs-6.col-xxs-12.xxs-text-center
				h3.page-subtitle Другие отели
			.col-sm-6.text-right.col-xs-6.hidden-xxs
				a.btn.btn-default(href="#!") Показать все
		.row
			- for (i=1;i<=4; i++) {
				.col-sm-6.col-md-3.col-xs-6.col-xxs-12
					.item__block.item__block-ext
						a(href="#!")
							img.item__block-img(src="img/content/hotel-preview.jpg", alt="hotel")
							.item__block-description
								p.item__block-description-price.btn От €#{i},999
								p.item__block-description-name sun grande le bla
								.testimonials__item-rating
									.testimonials__item-rating-active
			-}