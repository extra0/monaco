		include includes/modules/breadcrumbs
		.row
			// часть контента
			.col-lg-9.col-sm-8.m-b-30.p-b-30
				h2.title
					span Отель
					| Le bla ipsum
				block repeat
					.border-panel.m-t-30.m-b-30
