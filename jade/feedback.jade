extends _layout
block append head
	- title = 'Отзывы'
	meta(name="description" content="")
	meta(name="keywords" content="")
	title #{title}
block content
	.container.p-lg-100
		include includes/modules/breadcrumbs
		.row
			.col-sm-6.col-md-5
				h2.title
					span Оставить
					| отзыв
				// форма отзыва
				.border-panel.m-t-20
					form(action="#!")
						.form-group
							label.form-label Имя
							input.form-control(type="text" required value="Жан Клод")
						.form-group
							label.form-label Email
							input.form-control(type="email" required value="jancloud@gmail.com")
						.form-group
							label.form-label Соц.сеть
							input.form-control(type="email" required value="jancloud@gmail.com")
						.form-group
							label.form-label Отзыв
							textarea.form-control(rows="4" required)
						.row
							.col-lg-6.col-sm-12.text-center
								// рейтинг
								.feedback__rating-block
									input.feedback__rating-input#star-1(type="radio" name="rating" value="5")
									label.feedback__rating-label(for="star-1")
									input.feedback__rating-input#star-2(type="radio" name="rating" value="4")
									label.feedback__rating-label(for="star-2")
									input.feedback__rating-input#star-3(type="radio" name="rating" value="3")
									label.feedback__rating-label(for="star-3")
									input.feedback__rating-input#star-4(type="radio" name="rating" value="2")
									label.feedback__rating-label(for="star-4")
									input.feedback__rating-input#star-5(type="radio" name="rating" value="1")
									label.feedback__rating-label(for="star-5")
								// конец рейтинг
							.col-lg-6.col-sm-12
								button.btn.btn-block(type="submit") Отправить
				// конец форма отзыва
			.col-sm-6.col-md-7
				h3.testimonials__page-title Отзывы о нас
				- for (i=1; i<=6; i++) {
					.testimonials__item.m-b-30
						.row
							.col-lg-2.col-md-3.col-sm-4
								.testimonials__item-img-wrap
									img.testimonials__item-img(src="img/content/ava-#{i%2 ? 1 : 2}.jpg", alt="ava")
							.col-lg-10.col-md-9.col-sm-8
								p.testimonials__item-name Маша Гаврилина
								.testimonials__item-rating
									span.testimonials__item-rating-active
								p.testimonials__item-city Одесса
								p.testimonials__item-preview Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quia deserunt nihil libero ipsa pariatur consequatur impedit perferendis, aspernatur a blanditiis.
				- }
				.row
					.col-sm-offset-4.col-md-offset-3.col-lg-offset-2.col-sm-10
						a.btn(href="#!") 
							img(src="img/spin.png", alt="spin")
							| загрузить еще
